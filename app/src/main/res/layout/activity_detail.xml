<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout">

        <ImageView
                android:id="@+id/artistPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" app:srcCompat="@drawable/logo_no_text"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/artistName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_share"
                android:id="@+id/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="180dp" android:layout_marginRight="24dp"/>


        <TextView
                android:id="@+id/artistName"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/artistPhoto"
                app:layout_constraintBottom_toTopOf="@+id/song"/>


        <TextView
                android:id="@+id/song"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" app:layout_constraintTop_toBottomOf="@+id/artistPhoto"
                app:layout_constraintBottom_toTopOf="@+id/genre"/>

        <TextView
                android:id="@+id/duration"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" app:layout_constraintTop_toBottomOf="@+id/song"
                app:layout_constraintBottom_toTopOf="@+id/listeners"/>

        <TextView
                android:id="@+id/listeners"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listeners"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" app:layout_constraintTop_toBottomOf="@+id/duration"
                app:layout_constraintBottom_toTopOf="@+id/genre"/>

        <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grunge - rock - alternative"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/artistName"
                app:layout_constraintTop_toBottomOf="@+id/listeners"
                app:layout_constraintBottom_toTopOf="@+id/bio"/>

        <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/genre"
                app:layout_constraintTop_toBottomOf="@+id/genre"
                app:layout_constraintBottom_toTopOf="@+id/gridview"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar artists"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/bio" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/bio"/>

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toBottomOf="@id/bio"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="visible" android:layout_marginTop="100dp"/>

        <app.felgueiras.musicapp.view.MyGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:columnWidth="100dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:id="@+id/gridview"
                android:scrollbars="none"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@+id/bio"
                android:layout_marginTop="32dp"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>