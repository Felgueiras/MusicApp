<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.SplashScreenActivity"
            android:layout_margin="5dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout">

        <ImageView
                android:id="@+id/artistPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" app:srcCompat="@drawable/logo_no_text"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/artistName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_share"
                android:id="@+id/share"
                android:layout_marginTop="170dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
        />


        <TextView
                android:id="@+id/artistName"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_below="@id/artistPhoto"
                app:layout_constraintTop_toBottomOf="@+id/artistPhoto"
                app:layout_constraintBottom_toTopOf="@+id/song"/>


        <TextView
                android:id="@+id/song"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/artistName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/artistPhoto"
                app:layout_constraintBottom_toTopOf="@+id/genre"/>

        <TextView
                android:id="@+id/duration"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@id/song"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/song"
                app:layout_constraintBottom_toTopOf="@+id/listeners"/>

        <TextView
                android:id="@+id/listeners"
                android:transitionName="artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listeners"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@id/duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration"
                app:layout_constraintBottom_toTopOf="@+id/genre"/>

        <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grunge - rock - alternative"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/listeners"
                app:layout_constraintStart_toStartOf="@+id/artistName"
                app:layout_constraintTop_toBottomOf="@+id/listeners"
                app:layout_constraintBottom_toTopOf="@+id/bio"/>


        <include
                layout="@layout/view_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/genre"
                app:layout_constraintTop_toBottomOf="@id/bio"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <include
                android:visibility="gone"
                layout="@layout/artist_detail"
                android:layout_below="@id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bio"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />


    </RelativeLayout>

</ScrollView>