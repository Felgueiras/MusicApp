<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SplashScreenActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/logo" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/logo"
            tools:visibility="invisible"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/countryFlag"
            android:visibility="invisible" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="156dp" android:layout_marginEnd="156dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="155dp" android:layout_marginStart="155dp"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="111dp" android:layout_marginTop="35dp"
            android:layout_below="@+id/progressBar"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/info" android:layout_marginBottom="83dp"
            android:visibility="invisible"/>

</RelativeLayout>