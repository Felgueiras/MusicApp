<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:text="Top for Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/info" android:textAlignment="center"
                android:textStyle="bold" android:padding="10dp" android:textSize="18sp"/>
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="false"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/songsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="3dp" android:layout_below="@+id/info" android:layout_marginStart="0dp"/>

    </RelativeLayout>
</ScrollView>
